{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@flowforge/types": ["./shared/types/src/index.ts"],
      "@flowforge/canvas/*": ["./packages/canvas/src/*"],
      "@node-core/schema": ["../node-core/packages/schema/src/index.ts"],
      "@node-core/registry": ["../node-core/packages/registry/src/index.ts"],
      "@node-core/engine": ["../node-core/packages/engine/src/index.ts"],
      "@node-core/render": ["../node-core/packages/render/src/index.ts"]
    },
    "baseUrl": "."
  },
  "include": ["src", "packages", "shared"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
